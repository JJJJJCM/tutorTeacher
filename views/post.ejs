<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTS-8">
      <title>Post</title>
      
      <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      
      <link rel="stylesheet" href="../public/post.css">
  </head>
  <body>

    <%- include('header.html') %>

    <form class="container mt-5 post-background">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">할 일</label>
        <input type="text" class="form-control" id="title" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">날짜</label>
        <input type="date" class="form-control" id="date">
      </div>
      <button type="button" class="btn btn-primary mb-3" onclick="postWrite()">Submit</button>
    </form>

    <script>
      function postWrite() {
        const title = $('#title').val()
        const date = $('#date').val()

        $.ajax({
          type: 'POST',
          url: '/api/post',
          data: {title, date},
          success: function (response) {
            alert(response.message)
            window.location.reload()
          },
          error: function (response) {
            alert(response.responseJSON.message)
            window.location.reload()
          }
        })
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>



